{
  "extends": ["prettier", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["prettier", "react", "react-hooks", "html"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "globals": {
    "define": true,
    "require": true,
    "CloseIO": true,
    "Native": true,
    "_errs": true,
    "analytics": true,
    "Rollbar": true,
    "mixpanel": true,
    "Twilio": true,
    "jQuery": true,
    "S3Upload": true,
    "Mousetrap": true,
    "StripeCheckout": true,
    "google": true,
    "dagreD3": true,
    "d3": true,
    "Highcharts": true,
    "moment": true,
    "leadData": true,
    "describe": true,
    "it": true,
    "xit": true,
    "test": true,
    "beforeEach": true,
    "beforeAll": true,
    "afterEach": true,
    "afterAll": true,
    "expect": true,
    "jest": true
  },
  "rules": {
    "array-bracket-spacing": 0,
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "comma-dangle": 0,
    "comma-spacing": [
      2,
      {
        "after": true,
        "before": false
      }
    ],
    "comma-style": [2, "last"],
    "complexity": [2, 32],
    "consistent-this": 0,
    "dot-notation": 2,
    "eol-last": 2,
    "eqeqeq": 2,
    "indent-legacy": 0,
    "key-spacing": [
      2,
      {
        "afterColon": true,
        "beforeColon": false
      }
    ],
    "keyword-spacing": [2, {}],
    "linebreak-style": [2, "unix"],
    "lines-around-comment": 0,
    "max-depth": [2, 5],
    "max-len": [2, 300],
    "no-caller": 2,
    "no-empty": [
      2,
      {
        "allowEmptyCatch": true
      }
    ],
    "no-implicit-coercion": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 0,
    "no-multiple-empty-lines": 2,
    "no-plusplus": 0,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-warning-comments": 0,
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ],
    "no-with": 2,
    "one-var": 0,
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "next": "*",
        "prev": ["import"]
      },
      {
        "blankLine": "any",
        "next": ["import"],
        "prev": ["import"]
      }
    ],
    "prettier/prettier": "error",
    "quote-props": 0,
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "react-hooks/exhaustive-deps": "error",
    "react-hooks/rules-of-hooks": "error",
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "semi": [2, "always"],
    "semi-spacing": [
      2,
      {
        "after": true,
        "before": false
      }
    ],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "ignore",
        "named": "never"
      }
    ],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": 0,
    "wrap-iife": [2, "any"],
    "yoda": [2, "never"]
  }
}
